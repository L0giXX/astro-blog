---
import { Image } from "astro:assets";
import profileImage from "../assets/profile_Image.png";
---

<a href="/">
  <div>
    <Image
      src={profileImage}
      alt="Profile Image"
      style={{
        borderRadius: "9999px",
        width: "100px",
        height: "100px",
      }}
    />
  </div>
</a>

<style>
  a {
    transition: all 0.5s ease-in-out;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 9999px;
  }
  a:hover {
    scale: 1.1;
    background-color: #fb7185;
  }
  div {
    padding: 0.25rem;
    height: 100px;
    width: 100px;
  }
</style>
